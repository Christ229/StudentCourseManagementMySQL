-- CREATE DATABASE
CREATE DATABASE StudentCourseDB;

-- SELECT / USE THIS DATABASE
USE StudentCourseDB;
-- TABLE 1 : STUDENTS
CREATE TABLE Students (
    StudentID INT PRIMARY KEY AUTO_INCREMENT,
    StudentName VARCHAR(100) NOT NULL,
    Email VARCHAR(100),
    Department VARCHAR(50)
);

-- TABLE 2 : COURSES
CREATE TABLE Courses (
    CourseID INT PRIMARY KEY AUTO_INCREMENT,
    CourseName VARCHAR(100) NOT NULL,
    Credits INT NOT NULL
);

-- TABLE 3 : ENROLLMENTS
CREATE TABLE Enrollments (
    EnrollmentID INT PRIMARY KEY AUTO_INCREMENT,
    StudentID INT,
    CourseID INT,
    EnrollmentDate DATE,
    FOREIGN KEY (StudentID) REFERENCES Students(StudentID),
    FOREIGN KEY (CourseID) REFERENCES Courses(CourseID)
);

-- INSERT STUDENTS DATA
INSERT INTO Students (StudentName, Email, Department) VALUES
('Christ Marvyn', 'christmarvyn@example.com', 'BCA'),
('Alex John', 'alexjohn@example.com', 'BBA'),
('Riya Sharma', 'riya@example.com', 'BCA');

